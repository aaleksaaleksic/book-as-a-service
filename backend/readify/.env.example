# ===========================
# General
# ===========================
SPRING_APPLICATION_NAME=readbookhub
SERVER_PORT=8080

# ===========================
# Database
# ===========================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/readify_db
SPRING_DATASOURCE_USERNAME=your_db_username
SPRING_DATASOURCE_PASSWORD=your_secure_db_password
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# ===========================
# JWT - GENERATE YOUR OWN SECURE KEYS!
# ===========================
# Generate with: openssl rand -base64 64
READIFY_JWT_SECRET=your_super_secret_jwt_key_here_at_least_256_bits_long
READIFY_JWT_EXPIRATION=28800000

# ===========================
# JPA
# ===========================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# ===========================
# Payment
# ===========================
READIFY_PAYMENT_CURRENCY=RSD
READIFY_PAYMENT_PROVIDER=NLB_PAY
#READIFY_PAYMENT_WEBHOOK_URL=https://readify.com/api/v1/payments/webhook

# Bank integration - REPLACE WITH YOUR ACTUAL CREDENTIALS
NLB_MERCHANT_ID=your-merchant-id
NLB_SECRET_KEY=your-secret-key
#READIFY_PAYMENT_NLB_API_URL=https://api.nlbpay.rs/v1

# Subscription
READIFY_SUBSCRIPTION_MONTHLY_PRICE=60000
READIFY_SUBSCRIPTION_YEARLY_PRICE=600000
READIFY_SUBSCRIPTION_TRIAL_DURATION_DAYS=7

# Mock Payment (for dev/test only)
READIFY_PAYMENT_MOCK_ENABLED=true
READIFY_PAYMENT_MOCK_SUCCESS_RATE=95

# ===========================
# File Storage
# ===========================
APP_STORAGE_LOCAL_BASE_PATH=./storage
APP_STORAGE_LOCAL_BOOKS_DIR=books
APP_STORAGE_LOCAL_COVERS_DIR=covers

APP_STORAGE_MAX_FILE_SIZE=52428800
APP_STORAGE_MAX_PDF_SIZE=52428800
APP_STORAGE_MAX_IMAGE_SIZE=5242880

# ===========================
# Multipart
# ===========================
SPRING_SERVLET_MULTIPART_ENABLED=true
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=50MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=55MB
SPRING_SERVLET_MULTIPART_RESOLVE_LAZILY=false

# ===========================
# CORS
# ===========================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,Accept
CORS_EXPOSED_HEADERS=Content-Disposition
CORS_ALLOW_CREDENTIALS=true